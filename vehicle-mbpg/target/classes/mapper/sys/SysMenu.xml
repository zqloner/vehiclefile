<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mgl.dao.sys.SysMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.mgl.bean.sys.SysMenu">
        <id column="id" property="id" />
        <result column="type" property="type" />
        <result column="name" property="name" />
        <result column="code" property="code" />
        <result column="icon" property="icon" />
        <result column="url" property="url" />
        <result column="persmission" property="persmission" />
        <result column="descript" property="descript" />
        <result column="pid" property="pid" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, type, name, code, url,icon, persmission, descript, pid, status
    </sql>

    <!--角色添加权限的渲染-->
    <resultMap id="menuRelation" type="com.mgl.bean.dto.SysMenuDto">
        <id column="sid" property="id"></id>
        <result column="sname" property="name"></result>
        <result column="spid" property="pid"></result>
        <collection property="children" ofType="com.mgl.bean.dto.SysMenuDto">
            <id column="cid" property="id"></id>
            <result column="cname" property="name"></result>
            <result column="cpid" property="pid"></result>
        </collection>
    </resultMap>
    <select id="getMyMenus" resultMap="menuRelation">
        SELECT s.id sid,s.name sname,s.pid spid,c.id cid,c.name cname,c.pid cpid FROM sys_menu s,sys_menu c WHERE s.id=c.pid AND s.status=0 AND s.pid=0
    </select>

</mapper>
